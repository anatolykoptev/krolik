# Krolik Environment Configuration
# Copy this file to .env and fill in your values
# Or place in ~/.krolik/.env for global config

# ============================================================================
# LLM Provider API Keys (at least one required)
# ============================================================================

# Anthropic Claude API
# Get from: https://console.anthropic.com/settings/keys
NANOBOT_PROVIDERS__ANTHROPIC__API_KEY=your_anthropic_api_key_here

# OpenAI API
# Get from: https://platform.openai.com/api-keys
NANOBOT_PROVIDERS__OPENAI__API_KEY=your_openai_api_key_here

# OpenRouter (recommended - access to many models)
# Get from: https://openrouter.ai/keys
NANOBOT_PROVIDERS__OPENROUTER__API_KEY=your_openrouter_api_key_here
NANOBOT_PROVIDERS__OPENROUTER__API_BASE=https://openrouter.ai/api/v1

# DeepSeek
# Get from: https://platform.deepseek.com/api_keys
NANOBOT_PROVIDERS__DEEPSEEK__API_KEY=your_deepseek_api_key_here

# Google Gemini
# Get from: https://makersuite.google.com/app/apikey
NANOBOT_PROVIDERS__GEMINI__API_KEY=your_gemini_api_key_here

# Groq (fast inference)
# Get from: https://console.groq.com/keys
NANOBOT_PROVIDERS__GROQ__API_KEY=your_groq_api_key_here

# Zhipu AI (Chinese market)
# Get from: https://open.bigmodel.cn/usercenter/apikeys
NANOBOT_PROVIDERS__ZHIPU__API_KEY=your_zhipu_api_key_here
NANOBOT_PROVIDERS__ZHIPU__API_BASE=https://open.bigmodel.cn/api/paas/v4

# vLLM / Local LLM
NANOBOT_PROVIDERS__VLLM__API_KEY=your_vllm_api_key_here
NANOBOT_PROVIDERS__VLLM__API_BASE=http://localhost:8000/v1

# ============================================================================
# Agent Configuration
# ============================================================================

# Default model to use (provider/model format)
# Examples: anthropic/claude-opus-4-5, openai/gpt-4, openrouter/anthropic/claude-3-opus
NANOBOT_AGENTS__DEFAULTS__MODEL=anthropic/claude-opus-4-5

# Workspace directory
NANOBOT_AGENTS__DEFAULTS__WORKSPACE=~/.krolik/workspace

# Max tokens per request
NANOBOT_AGENTS__DEFAULTS__MAX_TOKENS=8192

# Temperature (0.0 - 1.0)
NANOBOT_AGENTS__DEFAULTS__TEMPERATURE=0.7

# Max tool iterations per request
NANOBOT_AGENTS__DEFAULTS__MAX_TOOL_ITERATIONS=20

# ============================================================================
# Chat Channels
# ============================================================================

# Telegram Bot
# Get token from @BotFather: https://t.me/BotFather
NANOBOT_CHANNELS__TELEGRAM__ENABLED=false
NANOBOT_CHANNELS__TELEGRAM__TOKEN=your_telegram_bot_token_here
NANOBOT_CHANNELS__TELEGRAM__ALLOW_FROM=[]
NANOBOT_CHANNELS__TELEGRAM__PROXY=

# WhatsApp
NANOBOT_CHANNELS__WHATSAPP__ENABLED=false
NANOBOT_CHANNELS__WHATSAPP__BRIDGE_URL=ws://localhost:3001
NANOBOT_CHANNELS__WHATSAPP__ALLOW_FROM=[]

# Feishu/Lark
NANOBOT_CHANNELS__FEISHU__ENABLED=false
NANOBOT_CHANNELS__FEISHU__APP_ID=your_feishu_app_id
NANOBOT_CHANNELS__FEISHU__APP_SECRET=your_feishu_app_secret
NANOBOT_CHANNELS__FEISHU__ENCRYPT_KEY=
NANOBOT_CHANNELS__FEISHU__VERIFICATION_TOKEN=
NANOBOT_CHANNELS__FEISHU__ALLOW_FROM=[]

# ============================================================================
# Memory (memU) Configuration
# ============================================================================

# memU service URL
NANOBOT_MEMORY__MEMU_URL=http://localhost:8000

# API key for memU (if required)
NANOBOT_MEMORY__API_KEY=

# Enable/disable memory features
NANOBOT_MEMORY__ENABLED=true

# Auto-memorize conversations
NANOBOT_MEMORY__AUTO_MEMORIZE=true

# Intent-aware retrieval
NANOBOT_MEMORY__INTENT_AWARE=true

# Proactive suggestions
NANOBOT_MEMORY__PROACTIVE_SUGGESTIONS=true

# ============================================================================
# MCP (Model Context Protocol) Configuration
# ============================================================================

# Enable MCP integration
NANOBOT_MCP__ENABLED=true

# MCP Servers (comma-separated list of name=url pairs)
# Format: server1=http://localhost:3001,server2=http://localhost:3002
NANOBOT_MCP__SERVERS__MEMOS__URL=http://localhost:8001/sse
NANOBOT_MCP__SERVERS__GDRIVE__URL=http://localhost:3002/sse
NANOBOT_MCP__SERVERS__NOTION__URL=http://localhost:3003/sse

# Auto-connect to MCP servers on startup
NANOBOT_MCP__AUTO_CONNECT=memos,gdrive

# Default timeout for MCP calls
NANOBOT_MCP__DEFAULT_TIMEOUT=30.0

# ============================================================================
# Gateway Configuration
# ============================================================================

# Gateway host and port
NANOBOT_GATEWAY__HOST=0.0.0.0
NANOBOT_GATEWAY__PORT=18790

# ============================================================================
# Tools Configuration
# ============================================================================

# Web Search (Brave Search API)
# Get from: https://api.search.brave.com/app/keys
NANOBOT_TOOLS__WEB__SEARCH__API_KEY=your_brave_search_api_key_here
NANOBOT_TOOLS__WEB__SEARCH__MAX_RESULTS=5

# Shell Exec Tool
NANOBOT_TOOLS__EXEC__TIMEOUT=60
NANOBOT_TOOLS__EXEC__RESTRICT_TO_WORKSPACE=false

# ============================================================================
# Advanced Options
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Debug mode (true/false)
DEBUG=false

# ============================================================================
# Quick Start Guide
# ============================================================================

# 1. Get at least one LLM API key from providers above
# 2. Copy this file to .env: cp .env.example .env
# 3. Edit .env and add your API keys
# 4. Start krolik: krolik gateway

# Optional: Enable channels
# - Telegram: Set NANOBOT_CHANNELS__TELEGRAM__ENABLED=true and add token
# - WhatsApp: Set NANOBOT_CHANNELS__WHATSAPP__ENABLED=true and run bridge

# Optional: Connect MCP servers
# - Start MCP servers (memos, gdrive, etc.)
# - Add their URLs to NANOBOT_MCP__SERVERS__*
# - Set NANOBOT_MCP__AUTO_CONNECT to auto-connect
